package listas2;

import java.util.Iterator;
import java.util.LinkedList;

class Main {

	public static void main(String[] args) {
		
	
		Producto producto1 = new Producto (1, "jean");
		Producto producto2 = new Producto (1, "remera");
		Producto producto3 = new Producto (1, "camisa");
		Producto producto4 = new Producto (1, "corbata");
		Producto producto5 = new Producto (1, "saco");
		
		LinkedList<Producto> libreria = new LinkedList<Producto>();

		
		libreria.add(producto1);
		libreria.add(producto2);
		libreria.add(producto3);
		libreria.add(0, producto4);
		libreria.add(producto5);
		
		
	buscar(libreria, "camisa");
	borrar(libreria, "saco");
	Main.imprimir(libreria);
	}
public static void imprimir(LinkedList<Producto>lista) {
	if (lista.isEmpty()) {
		System.out.println("la lista esta vacia");
	} else {
		for (Producto elemento : lista) {
			System.out.println( "-" + elemento.getNombre());
			System.out.println();
		}

	}
	
}


public static void buscar(LinkedList<Producto>lista, String palabra) {
	if (lista.isEmpty()) {
		System.out.println("la lista esta vacia");
	} else {
		for (Producto elemento : lista) {
			if (elemento.getNombre().equals(palabra)) {
				System.out.println("la lista contiene " + palabra);
				
			} }
	}
}
		
public static void borrar(LinkedList<Producto>lista, String palabra) {
	if (lista.isEmpty()) {
		System.out.println("la lista esta vacia");
	} else {
		for (Producto elemento : lista) {
			if (elemento.getNombre().equals(palabra)) {
				System.out.println("removio el elemento " + elemento.getNombre());
				lista.remove(lista.indexOf(elemento));
			} 
	}
	}
	
	}
	

		
		
		
}




